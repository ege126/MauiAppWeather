<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.PasswordResetMailSentPage"
             Title="PasswordResetMailSentPage">
    <VerticalStackLayout>
        <Label
            Text="E-MAIL SENT"
            FontSize="50"
            HorizontalOptions="Center"/>
        <Label 
            Text="An e-mail with the link to reset your password is sent to your mail address. 
 Please click on the link and follow the instructions."
            MaximumWidthRequest="450"
            FontSize="20"
             />
        <Button
            x:Name="toLoginPageButton"
            Text="to login page"
            Clicked="toLoginPageButtonClicked"
            MaximumWidthRequest="120"
            Margin="0,10,0,0"
            BackgroundColor="Green"
            TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>